
  function joueur(){
      this.nom = 'joseph la gosette';
      this.nombre_de_pieces = 100;
      this.afficher = function(){
          var resultat = 'bonjour '+this.nom+', vous avez '+this.nombre_de_pieces+" pièces d'or";
      return resultat;
      }
          this.getNom =function(){
               return nom;
                                 }
          this.setNom = function(nouveau){
               nom = nouveau;
                                         }
                    }

var joseph_la_gosette = new joueur();

    function Jeu(){
        this.joueurs = [];
      this.créerJoueur = function(){
             var j1 = new joueur();
             var j2 = new joueur();
             joueurs.push(j1)
             joueurs.push(j2)
             this.joueurs[0].nom = 'joseph la gosette';
             this.joueurs[1].nom = 'le ptit Jhonny qui aime les kikis';      
                                   }
      this.ajouterJoueur = function(j){
             this.joueurs.push(j);
                                      }
      this.afficherJoueurs = function(){
             var indice = 0;
             var longueur = this.joueurs.length;
             for(indice;indice<longueur;indice++){
                 this.joueurs[indice].afficher();
                                                 }
                                       }
                  }

var je_sais_pas_quel_nom_lui_donner = new Jeu();
je_sais_pas_quel_nom_lui_donner.afficherJoueurs();
console.log(Jeu.afficherJoueurs());

































